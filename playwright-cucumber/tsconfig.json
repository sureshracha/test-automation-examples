{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true, 
        "declaration": false,
        "types": ["node"],
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types",
            "src/helpers/types"
        ],
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"]
        },
        "resolveJsonModule": true,
    },
    
    "moduleResolution": "node",
    "importHelpers": true,
    "module": "es6",
    "skipLibCheck": true,
    "target": "es6",
    "preserveSymlinks": true,
    "downlevelIteration": true,
    "typeRoots": [
        "node_modules/@types"
    ],
    "lib": [
        "esnext",
        "dom",
        "esnext.asynciterable"
    ]
}